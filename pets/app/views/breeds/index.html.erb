<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Breeds</h1>      
</div>



  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Pets amount</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @breeds.each do |breed| %>
          <tr>
            <td><%= breed.name %></td>
            <td><%= breed.pets.count %></td>
            <td><%= link_to 'Show', breed, class: 'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_breed_path(breed), class: 'btn btn-default' %></td>
            <td><%= link_to 'Destroy', breed, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Breed', new_breed_path, class: 'btn btn-success' %>
  </div>