
<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Pets</h1>
</div>
<div class="col-md-6">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Breed</th>
        <th>Pet Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= link_to pet.breed.name, breed_path(pet.breed), class: 'btn btn-link'  %></td>
          <td><%= pet.name %></td>
          <td><%= link_to 'Show', pet, class: 'btn btn-info'  %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet), class: 'btn btn-default'  %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Pet', new_pet_path, class: 'btn btn-success'  %>

</div>